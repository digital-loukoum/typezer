{
	"name": "typezer",
	"version": "1.0.0",
	"description": "Parse Typescript files and retrieve a synthetic description of defined types and variables",
	"type": "module",
	"main": "library/index.js",
	"scripts": {
		"dev": "esrun --watch:source/**/*.ts,test/**/*.ts test",
		"test": "esrun test",
		"inspect": "esrun --inspect test",
		"typecheck": "tsc --noEmit",
		"build": "tsc-esm"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/digital-loukoum/typezer.git"
	},
	"keywords": [
		"typescript",
		"parse",
		"types",
		"definitions"
	],
	"author": "Gin Quin",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/digital-loukoum/typezer/issues"
	},
	"homepage": "https://github.com/digital-loukoum/typezer#readme",
	"dependencies": {
		"chokidar": "^3.5.3",
		"fast-glob": "^3.2.11",
		"typescript": "^4.5"
	},
	"devDependencies": {
		"@digitak/esrun": "^3.0.2",
		"@digitak/print": "^1.1.4",
		"@digitak/tsc-esm": "^2.0.3",
		"@types/node": "^15.6.1"
	}
}
